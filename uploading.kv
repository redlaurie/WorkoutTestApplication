<UploadButton>

    username:username
    password:password
    distance:distance

    GridLayout:

        cols:1
        size: root.width, root.height
        Label:
            id: distance
            text: "Distance"

        GridLayout:
            cols:2

            Label:
                text: "Username"

            TextInput:
                id: username
                multiline:False

            Label:
                text: "Password"

            TextInput:
                id: password
                multiline:False

        Button:
            text:"submit"
            on_press:root.SendData()

        Button:
            text:"start"
            on_press:root.start()